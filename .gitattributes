# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.rs text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.sol text eol=lf
*.toml text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf
.env.example text eol=lf
Dockerfile text eol=lf

# Binary files
*.wasm binary
*.so binary
*.dylib binary
*.dll binary
*.exe binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
